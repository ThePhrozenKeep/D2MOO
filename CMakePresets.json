{
  "version": 3,
  "configurePresets": [
    {
      "name": "DefaultGenerator",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": {
          "type": "PATH",
          "value": "${sourceDir}/out/build/${presetName}/runtime"
        }
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "VS2022",
      "inherits": "DefaultGenerator",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "ninja",
      "inherits": "DefaultGenerator",
      "generator": "Ninja Multi-Config",
      "architecture": {
        "value": "Win32",
        "strategy": "external"
      }
    },
    {
      "name": "clang-tidy",
      "inherits": "ninja",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--extra-arg=-D_CRT_USE_BUILTIN_OFFSETOF;--extra-arg=-Wno-microsoft-cast;--extra-arg=-Wno-multichar;--header-filter=.*"
      }
    },
    {
      "name": "clang-tidy-fix",
      "inherits": "clang-tidy",
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--extra-arg=-D_CRT_USE_BUILTIN_OFFSETOF;--extra-arg=-Wno-microsoft-cast;--extra-arg=-Wno-multichar;--header-filter=.*;--fix"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "DefaultGenerator",
      "configurePreset": "DefaultGenerator",
      "environment": {
        "UseMultiToolTask": "true",
        "EnforceProcessCountAcrossBuilds": "true"
      }
    },
    {
      "name": "VS2022",
      "configurePreset": "VS2022",
      "inherits": "DefaultGenerator"
    },
    {
      "name": "ninja",
      "configurePreset": "ninja"
    },
    {
      "name": "clang-tidy",
      "configurePreset": "clang-tidy"
    },
    {
      "name": "clang-tidy-fix",
      "configurePreset": "clang-tidy-fix"
    }
  ],
  "testPresets": [
    {
      "name": "DefaultGenerator",
      "configurePreset": "DefaultGenerator",
	  "output": {"outputOnFailure": true}
    },
    {
      "name": "VS2022",
      "configurePreset": "VS2022",
	  "output": {"outputOnFailure": true}
    },
    {
      "name": "ninja",
      "configurePreset": "ninja",
	  "output": {"outputOnFailure": true}
    },
    {
      "name": "clang-tidy",
      "configurePreset": "clang-tidy",
	  "output": {"outputOnFailure": true}
    }
  ]
}
